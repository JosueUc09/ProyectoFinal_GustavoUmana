@model IEnumerable<ProyectoFinal.Models.Career>
@{
    Layout = "_Layout";
}
<h2>Carreras</h2>
@if (User.IsInRole("Admin"))
{ <p><a class="btn btn-primary" href="/Careers/Create">Nueva Carrera</a></p> }
<table class="table table-striped">
<thead><tr><th>Nombre</th><th>Descripci√≥n</th><th></th></tr></thead>
<tbody>
@foreach (var c in Model){
<tr>
  <td>@c.Name</td>
  <td>@c.Description</td>
  <td>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-warning btn-sm" href="/Careers/Edit/@c.Id">Editar</a>
        <a class="btn btn-danger btn-sm" href="/Careers/Delete/@c.Id">Eliminar</a>
    }
  </td>
</tr>
}
</tbody>
</table>
